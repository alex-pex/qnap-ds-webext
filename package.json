{
  "name": "qnap-downloadstation-companion",
  "version": "0.1.0",
  "description": "A companion extension for QNAP DownloadStation.",
  "main": "build/main.js",
  "scripts": {
    "build": "run-s build:*",
    "watch": "run-p watch:*",
    "start": "run-p watch run-firefox",
    "run-firefox": "web-ext run",
    "build:background": "parcel build src/background/index.js -d build/background --target node --no-cache",
    "watch:background": "parcel watch src/background/index.js -d build/background --target node",
    "build:popup": "parcel build src/popup/index.html -d build/popup --public-url . --no-cache",
    "watch:popup": "parcel watch src/popup/index.html -d build/popup --public-url .",
    "serve:popup": "parcel serve src/popup/index.html -d build -p 3000 --open"
  },
  "author": "Alexandre Paixao",
  "license": "MIT",
  "dependencies": {
    "@acemarke/redux-starter-kit": "^0.0.6",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.7.1",
    "web-ext": "^2.6.0",
    "webextension-polyfill": "^0.2.1"
  }
}
